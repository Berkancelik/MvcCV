
@using MvcCV.EntiyLayer.Concrete
@model List<Skill>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    string color = "";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Yetenek Listem</h3>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th style="width: 10px">#</th>
                                                <th>Yetenek</th>
                                                <th>Derece</th>
                                                <th style="width: 250px">Oran</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                              @foreach (var item in Model)
                                            {
                                                if (item.Rate >= 50 && item.Rate <= 0)
                                            {
                                                color = "progress-bar bar-danger";
                                            }

                                            if (item.Rate>=51 && item.Rate <=70)
                                            {
                                                color = "progress-bar bg-warning";
                                            }

                                              if (item.Rate>=71 && item.Rate <=84)
                                            {
                                                color = "progress-bar bg-primary";
                                            }

                                               if (item.Rate>=81 && item.Rate <=100)
                                            {
                                                color = "progress-bar bg-success";
                                            }
                                            <tr>
                                              
                                                
                                          
                                                <td>1.</td>
                                                <td>@item.Id</td>
                                                <td>@item.Skills</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@color" style="width: @item.Rate%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="badge bg-warning">@item.Rate%</span></td>
                                            </tr>
                                              }
                                         
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- /.card -->
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>
</body>
</html>